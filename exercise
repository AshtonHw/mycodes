package com.example1;

import java.util.Scanner;

public class Practice {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
        //Create a scanner variable for collecting user input
		Scanner input = new Scanner(System.in);
        //Prompt the user to enter an option
		System.out.println("Please enter 0 or 1");
        //Assign the users answer to a variable called x
        int x = input.nextInt();
        //Test to see if x > 0 if true y = 1 but if x > 0 is false y = -1
        int y = (x >0) ? 1: -1;
        //Finally print the result to the user
        System.out.printf("Y =%d", y);
        // Close it out
        input.close();


	}

}
